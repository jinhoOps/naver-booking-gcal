{
  "manifest_version": 3,
  "name": "Naver Booking to Google Calendar",
  "version": "0.1.0",
  "description": "네이버 예약 공유페이지에서 구글 캘린더 일정 추가 버튼을 띄웁니다.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://booking.naver.com/*"
  ],
  "icons": {
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png",
    "256": "icon_256.png"
  },
  "action": {
    "default_icon": {
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg",
      "256": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://booking.naver.com/my/share/bookings/*",
        "https://booking.naver.com/my/bookings/*",
        "https://m.booking.naver.com/my/share/bookings/*",
        "https://m.booking.naver.com/my/bookings/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}